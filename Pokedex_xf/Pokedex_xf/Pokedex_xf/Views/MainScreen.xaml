<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Pokedex_xf.Views.MainScreen">
    <ContentPage.Content>
        <CollectionView x:Name="pokeCollectionBinding"
                        SelectionMode="Single"
                        SelectionChanged="pokeCollectionBinding_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout BackgroundColor="#FA8072">
                        <Frame CornerRadius="10"
                               Padding="5"
                               HasShadow="False"
                               Margin="15, 15, 15, 0">
                            <StackLayout Orientation="Horizontal"
                                         HeightRequest="75">
                                <Grid ColumnSpacing="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="115"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="#"
                                           FontSize="12"
                                           Grid.Column="0"
                                           Grid.Row="0"
                                           VerticalTextAlignment="Center"
                                           HorizontalOptions="End"
                                           Margin="5,0,0,0"/>
                                    <Label Text="{Binding Id}"
                                           FontSize="13"
                                           HorizontalOptions="Start"
                                           VerticalTextAlignment="Center"
                                           Grid.Row="0" Grid.Column="1"/>
                                    <Image Source="{Binding Sprites.FrontDefault}"
                                           Scale="1.8"
                                           HorizontalOptions="Center"
                                           Grid.Row="0" Grid.Column="2"
                                           Margin="20,0,0,0"/>
                                    <Label Text="{Binding Name}"
                                           Margin="20,0,0,0"
                                           FontSize="15"
                                           HorizontalTextAlignment="Start"
                                           VerticalTextAlignment="Center"
                                           Grid.Row="0" Grid.Column="3"/>
                                    <Label x:Name="TypeLabelOne"
                                           Text="{Binding Types[0].Type.Name}"
                                           Grid.Row="0" Grid.Column="4"
                                           FontSize="13"
                                           Margin="20,0,15,0"
                                           HorizontalTextAlignment="Start"
                                           VerticalTextAlignment="Center"/>
                                    <Label x:Name="TypeLabelTwo"
                                           Text="{Binding Types[1].Type.Name}"
                                           Grid.Row="0" Grid.Column="5"
                                           FontSize="13"
                                           HorizontalTextAlignment="Start"
                                           VerticalTextAlignment="Center"/>
                                </Grid>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>